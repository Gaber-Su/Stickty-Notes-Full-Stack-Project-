<%- include('./shared/header') %>
<link rel="stylesheet" href="./css/note.css"> 
    <title>Sticky Notes</title>
</head>
<body>
    

   <div class="d-flex justify-content-end me-3 mt-3">
    <a class="btn btn-danger fw-bold" href="/auth/logout">Log Out</a>
   </div>

<div class="container">
    <div class="d-flex justify-content-center my-5">
        <!-- Button trigger modal -->
<button type="button" class="btn btn-primary fw-bold" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Click To Add Note
   </button>
   
   <!-- Modal -->
   <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
     <div class="modal-dialog">
       <div class="modal-content">
         <div class="modal-body">
             <form action="/note" method="POST" enctype="multipart/form-data">
                 <div class="form-group my-2">
                     <input class="form-control" type="text" name="noteBody" placeholder="noteBody"
                         value="<%= oldInputs?.noteBody%>">
                 </div>
 
                 <div class="form-group my-2">
                     <input class="form-control" type="file" name="image">
                 </div>
                 <div class="form-group my-2">
                     <button class="btn btn-info w-100 fw-bold" type="submit"> Add Note + </button>
                 </div>
             </form>
         </div>
         <div class="modal-footer">
           <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
           <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
           <% if (errMessage?.length) { %>
            <div class="alert-alert-danger">
                <%= errMessage %>         
            </div>
           <% } %>
         </div>
       </div>
     </div>
   </div>
   
 
 
    </div>
</div>






<%# notes %> 
  <div class="container">
    <div class="row">
 <% for( let i = 0; i < notes.length; i++ ) { %>
    <div class="col-md-3">
        <div class="wrapper">
            <div class="note-wrap note-yellow">
                <p class="text-break"><%= notes[i].noteBody %> </p>
                <!-- <a href="http://youtu.be/vFYaFT0q6Uw">The Mighty Boosh</a> -->
                <img class="img-fluid" src="<%= notes[i].picture %> " alt="" srcset="">
               <div class="mt-3 d-flex justify-content-between">
                <a href="/note/<%= notes[i]._id %>/getPostByIDToUpdate"   class="btn btn-primary fw-bold">update</a>
                <a href="/note/<%= notes[i]._id %>/delete" class="ms-2 btn btn-danger fw-bold">Delete</a>
               </div>
            </div>
        </div>
    </div>


 <% } %>      
     
        
    </div>
</div>












  








