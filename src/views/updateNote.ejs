<div class="container">
    <div class="d-flex justify-content-center my-5">
        <!-- Button trigger modal -->
<button type="button" class="btn btn-primary fw-bold" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Update Note
   </button>
   
   <!-- Modal -->
   <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
     <div class="modal-dialog">
       <div class="modal-content">
         <div class="modal-body">

             <form action="/note/<%= note._id %>/update" method="POST" enctype="multipart/form-data">
                 <div class="form-group my-2">
                     <input class="form-control" type="text" name="noteBody" placeholder="noteBody"
                         value="<%= oldInputs?.noteBody%>">
                 </div>
 
                 <div class="form-group my-2">
                     <input class="form-control" type="file" name="image">
                 </div>
                 <div class="form-group my-2">
                     <button class="btn btn-info w-100 fw-bold" type="submit"> Update Note + </button>
                 </div>
             </form>
         </div>
         <div class="modal-footer">
           <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
           <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
           <% if (errMessage?.length) { %>
            <div class="alert-alert-danger">
                <%= errMessage %>         
            </div>
           <% } %>
         </div>
       </div>
     </div>
   </div>
   
 
 
    </div>
</div>






