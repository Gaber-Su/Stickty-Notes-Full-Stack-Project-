      <div class="container">
        <div class="main text-center mt-4 mb-2 p-4">
          <h1>Join US, Please Sign Up</h1>
      </div>
      <% if (errMessage?.length) { %>
        <div class="d-flex justify-content-center mt-3">
          <div class="alert alert-danger w-50 d-flex justify-content-center">
            <h6 class="text-center w-25">
              <%= errMessage %> 
            </h6>
           </div>
        </div>
        <% } %>

      <div class="form w-75 m-auto p-5">

        <form action="/auth/signup" method="POST">
          <div class="form-group my-2">
            <input class="form-control" value="<%= oldInputs?.userName%>" type="text" placeholder="UserName" name="userName">
        </div>

        <% if (validationErr?.includes('userName')) { %>
          <div class="my-2 text-center alert alert-danger">
            <p>In-valid userName</p>
          </div>
        <% } %>


          <div class="form-group my-2">
            <input class="form-control" value="<%= oldInputs?.email%>" type="email" placeholder="Email" name="email">
        </div>
        
        <% if (validationErr?.includes('email')) { %>
          <div class="my-2 text-center alert alert-danger">
            <p>In-valid email</p>
          </div>
        <% } %>

          <div class="form-group my-2">
            <input class="form-control" value="<%= oldInputs?.password%>" type="password" placeholder="Password" name="password">
        </div>
        
        <% if (validationErr?.includes('password')) { %>
          <div class="my-2 text-center alert alert-danger">
            <p>In-valid password</p>
          </div>
        <% } %>

          <div class="form-group my-2">
            <input class="form-control" value="<%= oldInputs?.cPassword%>" type="password" placeholder="Confirm Password" name="cPassword">
        </div>
        
        <% if (validationErr?.includes('cPassword')) { %>
          <div class="my-2 text-center alert alert-danger">
            <p>In-valid confirm Password</p>
          </div>
        <% } %>

        <div class="form-group my-2">
          <button type="submit" class="btn btn-info w-100 mb-2">Signup</button>
          <p>Already Have Account? <a class="btn btn-danger" href="/auth/signin">login</a></p>
      </div>
        </form>
      </div>

      </div>

    
     

    

   

    







